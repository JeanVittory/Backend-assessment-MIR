{
  "name": "fapi",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc tsc-alias",
    "dev": "cross-env NODE_ENV=development dotenv -e .env.development -- ts-node-dev --transpile-only --respawn --exit-child ./src/index.ts",
    "migrate:unit": "dotenv -e .env.unit -- npx prisma migrate dev",
    "test:unit": "cross-env NODE_ENV=test  dotenv -e .env.unit -- jest -i --testPathPattern=src/test/unit --detectOpenHandles",
    "migrate:integration": "dotenv -e .env.integration -- npx prisma migrate dev",
    "test:integration": "cross-env NODE_ENV=test dotenv -e .env.integration -- jest -i --testPathPattern=src/test/integration --detectOpenHandles",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:migrate": "dotenv -e .env.development -- npx prisma migrate deploy",
    "prisma:studio": "dotenv -e .env.development -- npx prisma studio",
    "prisma:reset": "dotenv -e .env.development -- npx prisma migrate reset",
    "prisma:seeders": "dotenv -e .env.development -- ts-node-dev ./src/api/database/seeders/createUser.seeders.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "prettier": "^2.8.8",
    "prisma": "4.13.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4",
    "uuid": "^9.0.0"
  },
  "dependencies": {
    "@prisma/client": "4.13.0",
    "argon2": "^0.30.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "winston": "^3.8.2"
  },
  "prisma": {
    "schema": "./src/api/database/prisma/schema.prisma"
  },
  "compilerOptions": {
    "typeRoots": [
      "./src/config/@types"
    ]
  },
  "_moduleAliases": {
    "@constants": "./src/api/constants",
    "@controllers": "./src/api/controllers",
    "@database/*": "./src/api/database",
    "@interfaces": "./src/api/interfaces",
    "@joi": "./src/api/joi",
    "@middlewares": "./src/api/middlewares",
    "@router": "./src/api/router",
    "@routes": "./src/api/routes",
    "@services": "./src/api/services",
    "@utils": "./src/api/utils",
    "@config": "./src/config"
  }
}
