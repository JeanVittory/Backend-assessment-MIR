generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  email    String
  password String
  Favs     Fav[]
}

model Fav {
  id          String  @id @default(uuid())
  name        String  @unique
  title       String
  description String
  link        String
  User        User?   @relation(fields: [userId], references: [id])
  userId      String?
}
